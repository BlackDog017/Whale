<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.blackdog.himemo.MainActivity"
    android:background="@drawable/background4">


    <Button
        android:layout_width="300dip"
        android:layout_height="50dip"
        android:text="Sign In"
        android:id="@+id/SignIn"
        android:textColor="#ffffff"
        android:background="@drawable/shape"
        android:textSize="17dp"
        android:layout_above="@+id/SignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />





    <Button
        android:layout_width="300dip"
        android:layout_height="50dip"
        android:text="Sign Up"
        android:id="@+id/SignUp"
        android:textColor="#ffffff"
        android:background="@drawable/shape"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/SignIn"
        android:layout_alignStart="@+id/SignIn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account"
        android:backgroundTint="#ffffff"
        android:textSize="20dp"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:hint="Your Account"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_above="@+id/password" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_marginBottom="29dp"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:hint="Password"
        android:layout_above="@+id/SignIn"
        android:layout_centerHorizontal="true"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:width="300dp" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/ball"
        android:background="@drawable/ball2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
